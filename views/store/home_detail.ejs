  <h2 class="text-3xl font-extrabold mb-8 text-center text-gray-800 tracking-tight">
    You are viewing the details of <%= home.houseName %>
  </h2>
    
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="rounded-lg overflow-hidden">
                  <img src="<%= (home.photo || home.photo).replace('../public', '') %>" alt="<%= home.houseName %>" class="w-full h-96 object-cover">
